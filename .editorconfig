# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{mjs,js,html,css,svg,json,md}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{md}]
charset = utf-8
indent_style = space
indent_size = 2

[*.{json}]
charset = utf-8
indent_style = space
indent_size = 2
